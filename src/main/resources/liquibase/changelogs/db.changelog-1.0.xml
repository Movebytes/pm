<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
    <changeSet author="R.B" id="changelog-0.0.5" context="development">
        <createTable tableName="pm_user">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="INT">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    <changeSet author="R.B" id="changelog-0.0.8" context="development">
        <createTable tableName="pm_project">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="start_date" type="TIMESTAMP" />
            <column name="end_date" type="TIMESTAMP" />
            <column name="status" type="INT">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    <changeSet author="R.B" id="changelog-0.0.9" context="development">
        <createTable tableName="pm_workload">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" foreignKeyName="fk_user" references="pm_user(id)" />
            </column>
            <column name="project_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" foreignKeyName="fk_project" references="pm_project(id)" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>