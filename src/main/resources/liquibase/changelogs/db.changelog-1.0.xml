<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
    <changeSet author="R.B" id="changelog-0.0.1" context="development">
        <createTable tableName="pm_user_status">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    <changeSet author="R.B" id="changelog-0.0.2" context="development">
        <insert tableName="pm_user_status">
            <column name="name" value="inactive" />
        </insert>
        <insert tableName="pm_user_status">
            <column name="name" value="active" />
        </insert>
        <insert tableName="pm_user_status">
            <column name="name" value="deleted" />
        </insert>
    </changeSet>
    <changeSet author="R.B" id="changelog-0.0.3" context="development">
        <createTable tableName="pm_role">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    <changeSet author="R.B" id="changelog-0.0.4" context="development">
        <insert tableName="pm_role">
            <column name="name" value="admin" />
        </insert>
        <insert tableName="pm_role">
            <column name="name" value="manager" />
        </insert>
        <insert tableName="pm_role">
            <column name="name" value="developer" />
        </insert>
        <insert tableName="pm_role">
            <column name="name" value="qa" />
        </insert>
        <insert tableName="pm_role">
            <column name="name" value="designer" />
        </insert>
    </changeSet>
    <changeSet author="R.B" id="changelog-0.0.5" context="development">
        <createTable tableName="pm_user">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="INT">
                <constraints nullable="false" foreignKeyName="fk_user_status" references="pm_user_status(id)" />
            </column>
            <column name="role" type="INT">
                <constraints foreignKeyName="fk_user_role" references="pm_role(id)" />
            </column>
        </createTable>
    </changeSet>
    <changeSet author="R.B" id="changelog-0.0.6" context="development">
        <createTable tableName="pm_project_status">
            <column name="id" type="INT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    <changeSet author="R.B" id="changelog-0.0.7" context="development">
        <insert tableName="pm_project_status">
            <column name="name" value="created" />
            <column name="name" value="active" />
            <column name="name" value="finished" />
        </insert>
    </changeSet>
    <changeSet author="R.B" id="changelog-0.0.8" context="development">
        <createTable tableName="pm_project">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="start_date" type="TIMESTAMP" />
            <column name="end_date" type="TIMESTAMP" />
            <column name="status" type="INT">
                <constraints nullable="false" foreignKeyName="fk_project_status" references="pm_project_status(id)" />
            </column>
        </createTable>
    </changeSet>
    <changeSet author="R.B" id="changelog-0.0.9" context="development">
        <createTable tableName="pm_workload">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" foreignKeyName="fk_user" references="pm_user(id)" />
            </column>
            <column name="project_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" foreignKeyName="fk_project" references="pm_project(id)" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>